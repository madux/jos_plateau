<page string="Dashboard">
                                <div class="header text-center">
                                    <field name="stage_id" widget="statusbar" force_save="1" readonly="1" domain="[('id', 'in', computed_stage_ids)]"/>
                                </div>
                                <div class="g-sidenav-show  bg-gray-100" id="dashboard-content">
                                    <div class="dashboard-main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
                                        <div class="container-fluid py-4">
                                            <div class="row mt-4">
                                                <div class="col-lg-4 mb-lg-0 mb-4">
                                                    <div class="card h-80">
                                                        <div class="card-body p-3">
                                                            <div class="row">
                                                                <div class="col-lg-12">
                                                                    <div class="d-flex flex-column h-100">
                                                                        <div class="card-header pb-0 text-bg-danger">
                                                                            <h3 class="text-center">General Info</h3>
                                                                         </div>
                                                                        <div class="table-responsive">
                                                                            <table class="table align-items-center mb-0">
                                                                                <thead>
                                                                                    <tr>
                                                                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"></th>
                                                                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2"></th>
                                                                                    </tr>
                                                                                </thead>
                                                                                <tbody>
                                                                                    <tr>
                                                                                        <td>
                                                                                            <small class="text-end text-bold mb-5">Name:</small>
                                                                                        </td>
                                                                                        <td>
                                                                                            <field name="name" readonly="1"/>

                                                                                        </td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <td>
                                                                                            <small class="text-end text-bold mb-5">Initiator:</small>
                                                                                        </td>
                                                                                        <td>
                                                                                            <field name="employee_id" readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                                                        </td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <td>
                                                                                            <small class="text-end text-bold mb-5">Department:</small>
                                                                                        </td>
                                                                                        <td>
                                                                                            <field name="dept_ids" readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                                                        </td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <td>
                                                                                            <small class="text-end text-bold mb-5">Reference:</small>
                                                                                        </td>
                                                                                        <td>
                                                                                            <field name="code" readonly="1"/>
                                                                                        </td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <td>
                                                                                            <small class="text-end text-bold mb-5">Project type:</small>
                                                                                        </td>
                                                                                        <td>
                                                                                            <field name="memo_type" readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                                                        </td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <td>
                                                                                            <small class="text-end text-bold mb-5">Operational Status:</small>
                                                                                        </td>
                                                                                        <td>
                                                                                            <field name="stage_id" readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                                                        </td> 
                                                                                    </tr>
                                                                                </tbody>
                                                                            </table>
                                                                        </div>
                                                                         
                                                                        <a class="text-body text-sm font-weight-bold mb-0 icon-move-right mt-auto" href="#">
                                                                            See More
                                                                            <i class="fa fa-arrow-right text-sm ms-1" aria-hidden="true"></i>
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="card h-80 p-3">
                                                        <div class="card-header pb-0 text-bg-danger">
                                                            <h3 class="text-center text-white">Customer Info</h3>
                                                        </div>
                                                        <div class="table-responsive">
                                                            <table class="table align-items-center mb-0">
                                                                <thead>
                                                                    <tr>
                                                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"></th>
                                                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2"></th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr>
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">Client Name:</small>
                                                                        </td>
                                                                        <td>
                                                                            <field name="client_id" readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">Client Address:</small>
                                                                        </td>
                                                                        <td>
                                                                            <field name="client_address" readonly="1"/>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">Client Address 2:</small>
                                                                        </td>
                                                                        <td>
                                                                            <field name="client_address2" readonly="1"/>
                                                                        </td> 
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">Phone:</small>
                                                                        </td>
                                                                        <td>
                                                                            <field name="client_phone" readonly="1"/>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">Email:</small>
                                                                        </td>
                                                                        <td>
                                                                            <field name="client_email" readonly="1" />
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">Country:</small>
                                                                        </td>
                                                                        <td>
                                                                            <field name="client_country_id" readonly="1" />
                                                                        </td>
                                                                    </tr>
                                                                    
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- <div class="col-lg-4" invisible="memo_type_key not in ['warehouse', 'transport']"> -->
                                                <div class="col-lg-4">
                                                    <div class="card h-80 p-3">
                                                        <div class="card-header pb-0 text-bg-danger">
                                                            <h3 class="text-center text-white">Consignment Info</h3>
                                                        </div>
                                                        <div class="table-responsive">
                                                            <table class="table align-items-center mb-0">
                                                                <thead>
                                                                    <tr>
                                                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"></th>
                                                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2"></th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr>
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">Logistic Company:</small>
                                                                        </td>
                                                                        <td>
                                                                            <field name="truck_company_name" readonly="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">No. items:</small>
                                                                        </td>
                                                                        <td>
                                                                           <field name="waybill_items" readonly="1" />
                                                                        </td>
                                                                        
                                                                    </tr>
                                                                    <tr invisible="truck_reg != False">
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">Reg No:</small>
                                                                        </td>
                                                                        <td>
                                                                            <field name="truck_reg" readonly="1" />
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">Driver / Phone:</small>
                                                                        </td>
                                                                        <td>
                                                                            <field name="truck_driver" readonly="1" /> /  <field name="truck_driver_phone" readonly="1" />
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">Pick up:</small>
                                                                        </td>
                                                                        <td>
                                                                            <field name="waybill_from" readonly="1" />  
                                                                        </td>
                                                                        
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">Drop off:</small>
                                                                        </td>
                                                                        <td>
                                                                            <field name="waybill_to" readonly="1" />  
                                                                        </td>
                                                                        
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">Transport Date:</small>
                                                                        </td>
                                                                        <td>
                                                                            <field name="waybill_date" readonly="1" />  
                                                                        </td>
                                                                        
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            <small class="text-end text-bold mb-5">Arrival Date:</small>
                                                                        </td>
                                                                        <td>
                                                                            <field name="waybill_expected_arrival_date" readonly="1" />  
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div> 
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-lg-4 mb-lg-0 mb-4">
                                                    <div class="card z-index-2">
                                                        <div class="card-body p-3">
                                                            <div class="card-header pb-0 text-bg-danger">
                                                                <h3 class="text-center text-white">Task</h3>
                                                            </div>
                                                            <div class="table-responsive">
                                                                <table class="table align-items-center mb-0">
                                                                    <thead>
                                                                        <tr>
                                                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"></th>
                                                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2"></th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                         <tr>
                                                                            <td>
                                                                                <small class="text-end text-bold mb-5">Todo:</small>
                                                                            </td>
                                                                            <td>
                                                                                <field name="task_todo" readonly="0" force_save="1"/>
                                                                            </td> 
                                                                        </tr>
                                                                        <tr>
                                                                            <td>
                                                                                <small class="text-end text-bold mb-5">Active:</small>
                                                                            </td>
                                                                            <td>
                                                                                <field name="task_active" readonly="1" force_save="1"/>
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td>
                                                                                <small class="text-end text-bold mb-5">Done:</small>
                                                                            </td>
                                                                            <td>
                                                                                <field name="task_done" readonly="0" force_save="1" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                                            </td>
                                                                        </tr>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                            <h6 class="ms-2 mt-4 mb-0"> Files &amp; Documents</h6>
                                                            <div class="container border-radius-lg">
                                                                <div class="row"> 
                                                                    <div class="col-4 py-3 ps-0">
                                                                        <div class="d-flex mb-2"> 
                                                                            <i class="ml-2 pl-3" aria-hidden="true">Task Remaining (Days): <field name="remaining_task_duration" readonly="1" invisible="0"/></i>
                                                                        </div>
                                                                        
                                                                        <field name="percentage_of_remaining_task" readonly="0" invisible="0" widget="progressbar"/> 
                                                                    </div>
                                                                    <div class="col-8 py-3 ps-0">
                                                                        <field name="task_todo_percentage" invisible="1"/> 
                                                                        <field name="task_active_percentage" invisible="1"/> 
                                                                        <field name="task_done_percentage" invisible="1"/>
                                                                        <field name="task_active" widget="taskdoughnutMemo" 
                                                                        options="{'title': 'Task Title', 'todo_field_red': 'task_todo_percentage', 'active_field_yellow': 'task_active_percentage', 'done_field_green': 'task_done_percentage', 'max_field': 'default_percentage_target', 'style': 'width:10px; height: 40px;'}" nolabel="1" force_save="1"/><br/>
                                                                    </div>
                                                                     
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <div class="card-guage col-lg-6 col-md-12 pl-5 mb-md-0 mb-4">
                                                    <div class="card card-border-gauge">
                                                        <div class="pb-0 mb-0 card-header-white"> 
                                                            <!-- <div class="d-flex justify-content-center align-items-center"> -->
                                                            <div class="d-flex align-items-left">
                                                                <div class="col-sm-3 col-md-3 cardfile responsive-border" >	
                                                                    <div class="number clickcard" style="font-size: 11px;"><strong>Budgeted</strong></div>
                                                                    <div class="card-name" style="font-size: 11px;">Cost (₦): <field name="total_cost" force_save="1" readonly="1"/></div>
                                                                    <div class="card-name" style="font-size: 11px;">Revenue (₦): <field name="total_revenue" force_save="1" readonly="1"/></div>
                                                                    <!-- <div class="card-name">Margin (₦): <field name="displayed_cost_revenue_margin" force_save="1" readonly="1"/></div> -->

                                                                    <field name="default_percentage_target" invisible="1"/>
                                                                    <field name="displayed_cost_revenue_margin" invisible="1"/>
                                                                    <field name="cost_revenue_margin" widget="gaugeMemo" options="{'title': '', 'guageInsideText': 'displayed_cost_revenue_margin', 'field_green': 'Revenue', 'field_red': 'Cost', 'max_field': 'default_percentage_target', 'style': 'width:10px; height: 40px;'}" nolabel="1" force_save="1"/><br/>
                                                                </div>
                                                                <div class="col-sm-3 col-md-3 cardfile responsive-border">
                                                                    <div class="number clickcard" style="font-size: 11px;"><strong>Billed Cost</strong></div>
                                                                    <div class="card-name" style="font-size: 11px;">Billed (₦): <field name="total_cost" force_save="1" readonly="1"/></div>
                                                                    <div class="card-name" style="font-size: 11px;">Not Billed (₦): <field name="total_po_to_be_invoiced" force_save="1" readonly="1"/></div>
                                                                    <!-- <div class="card-name color-grey">-</div> -->
                                                                    <field name="displayed_second_quad_percentage" invisible="1"/>
                                                                    <field name="second_quad_percentage" widget="gaugeMemo" options="{'title': '', 'guageInsideText': 'displayed_second_quad_percentage', 'field_green': 'Billed', 'field_red': 'Not Billed', 'max_field': 'default_percentage_target', 'style': 'width:10px; height: 40px;'}" nolabel="1" force_save="1"/><br/>
                                                                </div>
                                                                
                                                            </div>
                                                            <div class="d-flex align-items-left">
                                                                <div class="col-sm-3 col-md-3 cardfile responsive-border" >	
                                                                    <div class="number clickcard" style="font-size: 11px;"><strong>Realized</strong></div>
                                                                    <div class="card-name" style="font-size: 11px;">Cost (₦): <field name="total_closed_paid_cost" force_save="1" readonly="1"/></div>
                                                                    <div class="card-name" style="font-size: 11px;">Revenue (₦): <field name="total_closed_paid_revenue" force_save="1" readonly="1"/></div>
                                                                    <field name="displayed_third_quad_percentage" invisible="1"/>
                                                                    <field name="third_quad_percentage" widget="gaugeMemo" options="{'title': '', 'guageInsideText': 'displayed_third_quad_percentage', 'field_green': 'Realized', 'field_red': 'Not Realized', 'max_field': 'default_percentage_target', 'style': 'width:10px; height: 40px;'}" nolabel="1" force_save="1"/><br/> 
                                                                </div>
                                                                <div class="col-sm-3 col-md-3 cardfile responsive-border">
                                                                    <div class="number clickcard" style="font-size: 11px;"><strong>Revenue</strong></div>
                                                                    <div class="card-name" style="font-size: 11px;">Invoiced (₦): <field name="total_paid_revenue" force_save="1" readonly="1"/></div>
                                                                    <div class="card-name" style="font-size: 11px;">Not Invoiced (₦): <field name="total_so_to_be_invoiced" force_save="1" readonly="1"/></div>
                                                                    <field name="displayed_fourth_quad_percentage" invisible="1"/>
                                                                    <field name="fourth_quad_percentage" widget="gaugeMemo" options="{'title': '', 'guageInsideText': 'displayed_fourth_quad_percentage', 'field_green': 'Invoiced', 'field_red': 'Not Invoiced', 'max_field': 'default_percentage_target'}" nolabel="1" force_save="1"/><br/>
                                                                </div>
                                                                
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </page>